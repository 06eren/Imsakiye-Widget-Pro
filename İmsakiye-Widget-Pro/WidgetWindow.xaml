<Window x:Class="Ä°msakiye_Widget_Pro.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ankara Ä°msakiye Widget" 
        Height="420" Width="340"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <LinearGradientBrush x:Key="WidgetGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2d3436" Offset="0"/>
            <GradientStop Color="#1e272e" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00b894" Offset="0"/>
            <GradientStop Color="#00cec9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CountdownGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00b894" Offset="0"/>
            <GradientStop Color="#00cec9" Offset="0.5"/>
            <GradientStop Color="#0984e3" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    
    <Border Background="{StaticResource WidgetGradient}" 
            CornerRadius="18" 
            BorderBrush="{StaticResource HeaderGradient}" 
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#00b894" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- BaÅŸlÄ±k -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderGradient}" 
                    CornerRadius="10" 
                    Padding="12,8" 
                    Margin="0,0,0,15">
                <TextBlock x:Name="CityNameText" 
                          Text="ðŸ•Œ ANKARA Ä°MSAKÄ°YE" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <!-- Sonraki Vakit - Gradient Card -->
            <Border Grid.Row="1" 
                    Background="#1a1f24" 
                    CornerRadius="12" 
                    Padding="15" 
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource CountdownGradient}"
                    BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#00cec9" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="â° Sonraki Vakit" 
                              FontSize="12" 
                              Foreground="#b2bec3" 
                              HorizontalAlignment="Center"
                              FontWeight="SemiBold"/>
                    <TextBlock x:Name="NextPrayerName" 
                              Text="Ä°msak" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,5,0,0">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00b894" Offset="0"/>
                                <GradientStop Color="#00cec9" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock x:Name="CountdownText" 
                              Text="00:00:00" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              Margin="0,8,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00b894" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Namaz Vakitleri -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PrayerTimesPanel">
                    <!-- Vakit satÄ±rlarÄ± dinamik olarak eklenecek -->
                </StackPanel>
            </ScrollViewer>

            <!-- Alt Butonlar -->
            <Border Grid.Row="3" 
                    Background="#1a1f24" 
                    CornerRadius="8" 
                    Padding="8" 
                    Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="âš™" 
                            Width="36" Height="36" 
                            Click="SettingsButton_Click" 
                            Background="{StaticResource HeaderGradient}" 
                            Foreground="White" 
                            BorderThickness="0"
                            FontSize="16" 
                            Margin="0,0,8,0" 
                            ToolTip="Ayarlar"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="18" 
                                                   BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="âˆ’" 
                            Width="36" Height="36" 
                            Click="MinimizeButton_Click" 
                            Background="#636e72" 
                            Foreground="White" 
                            BorderThickness="0"
                            FontSize="20" 
                            FontWeight="Bold" 
                            Margin="0,0,8,0" 
                            ToolTip="Gizle"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="18" 
                                                   BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="âœ•" 
                            Width="36" Height="36" 
                            Click="CloseButton_Click" 
                            Background="#d63031" 
                            Foreground="White" 
                            BorderThickness="0"
                            FontSize="16" 
                            FontWeight="Bold" 
                            ToolTip="Kapat"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="18" 
                                                   BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
