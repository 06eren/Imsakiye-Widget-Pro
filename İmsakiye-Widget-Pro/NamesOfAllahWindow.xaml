<Window x:Class="İmsakiye_Widget_Pro.NamesOfAllahWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Esma-ül Hüsna" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1e272e">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#6c5ce7" Padding="15">
            <TextBlock Text="✨ ESMA-ÜL HÜSNA (Allah'ın 99 İsmi)" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="20" x:Name="NamesPanel"/>
        </ScrollViewer>
    </Grid>
</Window>
